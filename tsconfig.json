{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    /* path alias*/
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // 开启文件扩展名
    "allowImportingTsExtensions": true,
    /* element-plus Volar支持 */
    "types": [
      "element-plus/global"
    ]
  },
  "include": ["src/**/*.ts","**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "electron"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
